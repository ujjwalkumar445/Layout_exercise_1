<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:paddingTop="30dp"
        android:background="@drawable/first_page"
        android:textAlignment="center"
        android:id="@+id/t1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card"
        android:layout_below="@+id/t1">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/image"
        android:src="@drawable/ice1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:id="@+id/t2"
            android:text="Ice Cream Sundae"
            android:textColor="#000"
            android:accessibilityTraversalBefore="@id/image"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:paddingLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t2"
            android:id="@+id/t3"
            android:text="145 Mall Of India"
            android:textColor="#000"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp"
            />

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:numStars="5"
            android:scaleX=".5"
            android:scaleY=".4"
            android:rating="4"
            android:transformPivotX="10dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/t3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="520 reviews"
            android:layout_alignRight="@+id/rating"
            android:layout_below="@+id/t3"
            android:layout_marginTop="10dp"
            />




    </RelativeLayout>


</RelativeLayout>